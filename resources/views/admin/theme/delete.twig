{% extends('layout.admin') %}

{% block content %}
    <div class="container-fluid">
        <p class="display-4">Удаление темы</p>
        <div class="row">
            <div class="col-md-12">
                <form action="{{ url('/admin/theme/delete') ~ '/' ~ category.id }}" method="post" accept-charset="utf-8">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                    <div class="form-group">
                        <label for="inputName">Название темы</label>
                        <input type="text" class="form-control" id="inputName" name="inputName" value="{{ category.name }}" disabled>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock content %}

{% block init_scripts %}
{% endblock init_scripts %}