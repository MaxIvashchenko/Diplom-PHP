{% extends('layout.admin') %}

{% block content %}
    <div class="container-fluid">
        <p class="display-4">Удаление пользователя</p>
        <div class="row">
            <div class="col-md-12">
                <form action="{{ url('/admin/users/delete') ~ '/' ~ admin.id }}" method="post" accept-charset="utf-8">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                    <div class="form-group">
                        <label for="inputName">Имя администратора</label>
                        <input type="text" class="form-control" id="inputName" name="inputName" value="{{ admin.name }}" disabled>
                    </div>

                    <div class="form-group">
                        <label for="inputEmail">Email администратора</label>
                        <input type="text" class="form-control" id="inputEmail" name="inputEmail" value="{{ admin.email }}" disabled>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock content %}

{% block init_scripts %}
{% endblock init_scripts %}