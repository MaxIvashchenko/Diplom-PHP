{% extends('layout.admin') %}

{% block content %}
    <div class="container-fluid">
        <p class="display-4">Удаление вопроса</p>
        <div class="row">
            <div class="col-md-12">

                <form action="{{ url('/admin/delete') ~ '/' ~ question.id }}" method="post" accept-charset="utf-8">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                    <div class="form-group">
                        <label for="inputQuestion">Вопрос</label>
                        <input type="text" class="form-control" id="inputQuestion" name="inputQuestion" value="{{ question.question }}" disabled>
                    </div>

                    <div class="form-group">
                        <label for="inputAnswer">Ответ</label>
                        <input type="textarea" class="form-control" id="inputAnswer" name="inputAnswer" value="{{ question.answer.answer }}" disabled>
                    </div>

                    <div class="form-group">
                        <label for="inputAuthor">Автор</label>
                        <input type="text" class="form-control" id="inputAuthor" name="inputAuthor" value="{{ question.author }}" disabled>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Удалить</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock content %}

{% block init_scripts %}
{% endblock init_scripts %}