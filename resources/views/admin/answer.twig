{% extends('layout.admin') %}

{% block content %}
    <div class="container-fluid">
        <p class="display-4">Ответ на вопрос</p>
        <div class="row">
            <div class="col-md-12">

                <form action="{{ url('/admin/answer') ~ '/' ~ question.id }}" method="post" accept-charset="utf-8">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                    <div class="form-group">
                        <label for="inputQuestion">Вопрос</label>
                        <input type="text" class="form-control" id="inputQuestion" name="inputQuestion"
                               value="{{ question.question }}" disabled>
                    </div>

                    <div class="form-group">
                        <label for="inputAnswer">Ответ</label>
                        <textarea class="form-control" id="inputAnswer" name="inputAnswer" required></textarea>
                    </div>

                    <div class="form-group">
                        <label for="inputAuthor">Автор</label>
                        <input type="text" class="form-control" id="inputAuthor" name="inputAuthor" value="{{ question.author }}" required>
                    </div>

                    <div class="form-group">
                        <div class="form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" name="inputPublished" value="1" {% if question.published == 1 %} checked {% endif %}>
                                Опубликован
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Ответить</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock content %}

{% block init_scripts %}
{% endblock init_scripts %}