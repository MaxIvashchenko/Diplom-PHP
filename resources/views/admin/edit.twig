{% extends('layout.admin') %}

{% block content %}
    <div class="container-fluid">
        <p class="display-4">Редактирование вопроса</p>
        <div class="row">
            <div class="col-md-12">

                <form action="{{ url('/admin/edit') ~ '/' ~ question.id }}" method="post" accept-charset="utf-8">
                    <input type="hidden" name="_token" value="{{ csrf_token() }}">

                    <div class="form-group">
                        <label for="inputQuestion">Вопрос</label>
                        <input type="text" class="form-control" id="inputQuestion" name="inputQuestion" value="{{ question.question }}" required>
                    </div>

                    <div class="form-group">
                        <label for="inputAnswer">Ответ</label>
                        <textarea class="form-control" id="inputAnswer" name="inputAnswer" required>{{ question.answer.answer }}</textarea>
                    </div>

                    <div class="form-group">
                        <label for="inputAuthor">Автор</label>
                        <input type="text" class="form-control" id="inputAuthor" name="inputAuthor" value="{{ question.author }}" required>
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Изменить</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
{% endblock content %}

{% block init_scripts %}
{% endblock init_scripts %}